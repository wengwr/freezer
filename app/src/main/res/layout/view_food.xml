<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/view_food_donut_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        custom:donut_finished_color="@color/main_color"
        custom:donut_finished_stroke_width="3dp"
        custom:donut_max="100"
        custom:donut_progress="0"
        custom:donut_unfinished_stroke_width="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="面包"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_view_food_expiretime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="面包"
            android:textSize="13sp" />


    </LinearLayout>


</LinearLayout>
